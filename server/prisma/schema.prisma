generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         String    @id @default(uuid())
  created_at DateTime? @default(now()) @db.Timestamptz(6)
  edited_at  DateTime? @default(now()) @db.Timestamptz(6)
  name       String    @default("")
  email      String    @unique
  phone      String?   @unique
  password   String
}

model tokens {
  id            String    @id @default(uuid())
  created_at    DateTime? @default(now()) @db.Timestamptz(6)
  refresh_token String    @unique
  email         String    @unique
}
